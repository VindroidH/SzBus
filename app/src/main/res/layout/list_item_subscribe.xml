<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/stub_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/stub_item_subscribe_header" />

    <RelativeLayout
        style="@style/content_bus_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bus_line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/test_bus_line_name" />

        <TextView
            android:id="@+id/bus_line_ahead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/test_ahead" />
    </RelativeLayout>

    <View style="@style/paring_line" />
</LinearLayout>